<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RouletteStatsTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RouletteStatsTracker"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Input">
            <ShellContent  ContentTemplate="{DataTemplate local:InputPage}"/>
        </Tab>
        <Tab Title="Flow">
            <ShellContent  ContentTemplate="{DataTemplate local:FlowPage}" />
        </Tab>
        <Tab Title="Stats">
            <ShellContent  ContentTemplate="{DataTemplate local:StatsPage}" />
        </Tab>
    </TabBar>
</Shell>
