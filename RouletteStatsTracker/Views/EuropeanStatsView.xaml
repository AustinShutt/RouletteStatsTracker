<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:RouletteStatsTracker.ViewModels"
             xmlns:drawable="clr-namespace:RouletteStatsTracker.Graphs"
             x:Class="RouletteStatsTracker.Views.EuropeanStatsView">

    <ContentView.BindingContext>
        <ViewModels:AmericanStatsViewModel/>
    </ContentView.BindingContext>
    <ContentView.Resources>
        <drawable:ERadarGraph x:Key="ERadarChart" x:Name="EradarGraph">
            <x:Arguments>
            </x:Arguments>
        </drawable:ERadarGraph>
    </ContentView.Resources>
    
    <GraphicsView x:Name="RadarSurface"  Drawable="{StaticResource ERadarChart}"  HeightRequest="350" WidthRequest="350" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,25"/>
    
</ContentView>
