                    <Button Text="17" Grid.Row="5" Grid.Column="1"  Style="{StaticResource DarkButton}" Command="{Binding DataButtonCommand}" CommandParameter="17" WidthRequest="100"  MinimumWidthRequest="42"  MinimumHeightRequest="42"/>
                    <Button Text="18" Grid.Row="5" Grid.Column="2" Style="{StaticResource RedButton}"   Command="{Binding DataButtonCommand}" CommandParameter="18" WidthRequest="100"  MinimumWidthRequest="42"  MinimumHeightRequest="42"/>
                    <Button Text="19" Grid.Row="6" Grid.Column="0"  Style="{StaticResource RedButton}"  Command="{Binding DataButtonCommand}" CommandParameter="19" WidthRequest="100"  MinimumWidthRequest="42" MinimumHeightRequest="42"/>
                    <Button Text="20" Grid.Row="6" Grid.Column="1"  Style="{StaticResource DarkButton}" Command="{Binding DataButtonCommand}" CommandParameter="20" WidthRequest="100"  MinimumWidthRequest="42" MinimumHeightRequest="42"/>
                    <Button Text="21" Grid.Row="6" Grid.Column="2" Style="{StaticResource RedButton}"   Command="{Binding DataButtonCommand}" CommandParameter="21" WidthRequest="100"  MinimumWidthRequest="42" MinimumHeightRequest="42"/>
                    <Button Text="22" Grid.Row="7" Grid.Column="0"  Style="{StaticResource DarkButton}" Command="{Binding DataButtonCommand}" CommandParameter="22" WidthRequest="100"  MinimumWidthRequest="42" MinimumHeightRequest="42"/>
                    <Button Text="23" Grid.Row="7" Grid.Column="1"  Style="{StaticResource RedButton}"  Command="{Binding DataButtonCommand}" CommandParameter="23" WidthRequest="100"  MinimumWidthRequest="42" MinimumHeightRequest="42"/>
                    <Button Text="24" Grid.Row="7" Grid.Column="2" Style="{StaticResource DarkButton}"  Command="{Binding DataButtonCommand}" CommandParameter="24" WidthRequest="100"  MinimumWidthRequest="42" MinimumHeightRequest="42"/>
                    <Button Text="25" Grid.Row="8" Grid.Column="0"  Style="{StaticResource RedButton}"  Command="{Binding DataButtonCommand}" CommandParameter="25" WidthRequest="100"  MinimumWidthRequest="42" MinimumHeightRequest="42"/>
                    <Button Text="26" Grid.Row="8" Grid.Column="1"  Style="{StaticResource DarkButton}" Command="{Binding DataButtonCommand}" CommandParameter="26" WidthRequest="100"  MinimumWidthRequest="42" MinimumHeightRequest="42"/>
                    <Button Text="27" Grid.Row="8" Grid.Column="2" Style="{StaticResource RedButton}"   Command="{Binding DataButtonCommand}" CommandParameter="27" WidthRequest="100"  MinimumWidthRequest="42" MinimumHeightRequest="42"/>
                    <Button Text="28" Grid.Row="9" Grid.Column="0"  Style="{StaticResource DarkButton}" Command="{Binding DataButtonCommand}" CommandParameter="28" WidthRequest="100"  MinimumWidthRequest="42" MinimumHeightRequest="42"/>
