                    <Button Text="30" Grid.Row="9" Grid.Column="2" Style="{StaticResource RedButton}"   Command="{Binding DataButtonCommand}" CommandParameter="30" WidthRequest="100"  MinimumWidthRequest="42" MinimumHeightRequest="42"/>
                    <Button Text="31" Grid.Row="10" Grid.Column="0"  Style="{StaticResource DarkButton}" Command="{Binding DataButtonCommand}" CommandParameter="31" WidthRequest="100" MinimumWidthRequest="42"  MinimumHeightRequest="42"/>
                    <Button Text="32" Grid.Row="10" Grid.Column="1"  Style="{StaticResource RedButton}"  Command="{Binding DataButtonCommand}" CommandParameter="32" WidthRequest="100" MinimumWidthRequest="42"  MinimumHeightRequest="42"/>
                    <Button Text="33" Grid.Row="10" Grid.Column="2" Style="{StaticResource DarkButton}"  Command="{Binding DataButtonCommand}" CommandParameter="33" WidthRequest="100" MinimumWidthRequest="42"  MinimumHeightRequest="42"/>
                    <Button Text="34" Grid.Row="11" Grid.Column="0"  Style="{StaticResource RedButton}"  Command="{Binding DataButtonCommand}" CommandParameter="34" WidthRequest="100" MinimumWidthRequest="42"  MinimumHeightRequest="42"/>
                    <Button Text="35" Grid.Row="11" Grid.Column="1"  Style="{StaticResource RedButton}"  Command="{Binding DataButtonCommand}" CommandParameter="35" WidthRequest="100" MinimumWidthRequest="42"  MinimumHeightRequest="42"/>
                    <Button Text="36" Grid.Row="11" Grid.Column="2" Style="{StaticResource RedButton}"   Command="{Binding DataButtonCommand}" CommandParameter="36" WidthRequest="100" MinimumWidthRequest="42"  MinimumHeightRequest="42"/>
                </Grid>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </StackLayout>
</ContentView>
